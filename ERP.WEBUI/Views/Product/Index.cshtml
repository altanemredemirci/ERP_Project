@model IEnumerable<ERP.Entity.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="/Product/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUsername)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedUsername)
        </td>
        <td>
            <a href="/Product/Edit/@item.Id" class="btn btn-warning btn-xs">
                <i class="far fa-edit"></i>
            </a>
            <a href="/Product/Delete/@item.Id" class="btn btn-danger btn-xs">
                <i class="fa-solid fa-trash"></i>
            </a>
            <a href="/Product/Details/@item.Id" class="btn btn-info btn-xs">
                <i class="fa-solid fa-search"></i>
            </a>
        </td>
    </tr>
}

</table>
